<h2><%= @gossyp.title %></h2>
<p><%= @gossyp.body %></p>

<% @gossyp.responses.each do |response| %>
  <p><%= response.body %></p>
<% end %>

<form method="POST" action="/gossyps/<%=@gossyp.id%>/responses">
  <textarea name="response[body]"></textarea>
  <input type="submit" value="Add Response">
</form>
